

<h1>Listing Companies</h1>
<ul class="nav nav-tabs" role="tablist" >
  <li> <%= link_to 'Category', categories_path %></li>
  <li class="active"><%= link_to 'Company', companies_path %></li>
  <li ><%= link_to 'Products', products_path %></li>
  <li><%= link_to 'Customers', customers_path %></li>
  <li><%= link_to 'Orders', orders_path %></li>
    
</ul>
  <br>
  <%= link_to  new_company_path , :style=>'color:#FFFFFF;', class: "btn btn-primary" do %>
      <i class="glyphicon glyphicon-plus"></i>New Company
  <%end%>
<br><br>
<table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>Company name</th>
     <th colspan="3"><center>Action</center></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.company_name %></td>
        <td><%= link_to  company , class: "btn btn-success", :style=>'color:#FFFFFF;' do%>
          <i class="glyphicon glyphicon-check"></i>Show
             <%end %>
        </td>
        <td><%= link_to  edit_company_path(company) , class: "btn btn-warning", :style=>'color:#FFFFFF;' do%>
             <i class="glyphicon glyphicon-pencil"></i>Edit
             <%end %>
        </td>
        <td><%= link_to  company, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger", :style=>'color:#FFFFFF;' do%>
           <i class="glyphicon glyphicon-trash"></i>Destroy
            <%end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
