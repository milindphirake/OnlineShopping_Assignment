
<h1>Listing Orders</h1>
<ul class="nav nav-tabs" role="tablist" >
 <li> <%= link_to 'Category', categories_path %></li>
  <li ><%= link_to 'Company', companies_path %></li>
   <li ><%= link_to 'Products', products_path %></li>
   <li><%= link_to 'Customers', customers_path %></li>
   <li class="active"><%= link_to 'Orders', orders_path %></li>
   
  </ul>

<table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>Order no</th>
      <th>Tracking no</th>
      <th>Customer Name</th>
      <th>Email ID</th>
      <th>Delivery date</th>
      <th>Order value</th>
      <th>Amount</th>
      <th>Delivery type</th>
       <th>Products</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.order_no %></td>
        <td><%= order.tracking_no %></td>
        <td><%= order.customer.fname %> <%= order.customer.lname %></td>
        <td><%= order.customer.email %></td>
        <td><%= order.delivery_date %></td>
        <td><%= order.order_value %></td>
        <td><%= order.amount %></td>
        <td><%= order.delivery_type %></td>

        <td><% order.products.each do |product| %>
              <%= %>
              <% if product == order.products.last %>
                  <%= product.product_name rescue ''%>
              <% else %>
                  <%= product.product_name rescue ''%>,
              <% end %>
            <% end %>
        </td>


        <td><%= link_to  order , class: "btn btn-success", :style=>'color:#FFFFFF;' do %>
              <i class="glyphicon glyphicon-check"></i>Show
        <%end%>

        </td>
        <td><%= link_to  edit_order_path(order) , class: "btn btn-warning", :style=>'color:#FFFFFF;' do %>
              <i class="glyphicon glyphicon-pencil"></i>Edit
        <%end%>

        </td>
        <td><%= link_to  order, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger", :style=>'color:#FFFFFF;' do %>
              <i class="glyphicon glyphicon-trash"></i>Destroy
        <%end%>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to  new_order_path ,:style=>'color:#FFFFFF;', class: "btn btn-primary" do%>
<i class="glyphicon glyphicon-plus"></i>New Order
        <%end%>
