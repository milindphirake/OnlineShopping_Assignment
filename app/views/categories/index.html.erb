
<h1>Listing Categories</h1>

<ul class="nav nav-tabs" role="tablist" >
 <li class="active"> <%= link_to 'Category', categories_path %></li>
  <li><%= link_to 'Company', companies_path %></li>
   <li><%= link_to 'Products', products_path %></li>
    <li><%= link_to 'Customers', customers_path %></li>
   <li><%= link_to 'Orders', orders_path %></li>
    
  </ul>

<table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>Category name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.category_name %></td>
        <td><%= link_to  category , class: "btn btn-success", :style=>'color:#FFFFFF;' do %>
             <i class="glyphicon glyphicon-check"></i>Show
             <%end %>
        </td>
        <td><%= link_to  edit_category_path(category), class: "btn btn-warning", :style=>'color:#FFFFFF;' do %>
            <i class="glyphicon glyphicon-pencil"></i>Edit
             <%end %>
        </td>
        <td><%= link_to  category, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger", :style=>'color:#FFFFFF;' do %>
           <i class="glyphicon glyphicon-trash"></i>Destroy
        <%end%>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to  new_category_path , :style=>'color:#FFFFFF;',class: "btn btn-primary" do %>
<i class="glyphicon glyphicon-plus"></i>New Category
        <%end%>


