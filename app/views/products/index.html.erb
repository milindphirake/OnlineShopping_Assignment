

<h1>Listing Products</h1>
<ul class="nav nav-tabs" role="tablist" >
 <li> <%= link_to 'Category', categories_path %></li>
  <li ><%= link_to 'Company', companies_path %></li>
   <li class="active"><%= link_to 'Products', products_path %></li>
   <li><%= link_to 'Customers', customers_path %></li>
   <li><%= link_to 'Orders', orders_path %></li>
  
  </ul>
<table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>Images</th>
      <th>Category</th>
      <th>Company</th>
      <th>Product name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Sku</th>
      <th>Lehgth</th>
      <th>Width</th>
      <th>Hieght</th>
      <th>Weight</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= image_tag product.image(:thumb) rescue '' %></td> 
        <td><%= product.category.category_name  rescue ''%></td>
        <td><%= product.company.company_name rescue '' %></td>
        <td><%= product.product_name %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= product.quantity %></td>
        <td><%= product.sku %></td>
        <td><%= product.lehgth %></td>
        <td><%= product.width %></td>
        <td><%= product.hieght %></td>
        <td><%= product.weight %></td>
        <td><%= link_to  product ,class: "btn btn-success" , :style=>'color:#FFFFFF;' do%>
               <i class="glyphicon glyphicon-check"></i>Show
            <%end%>
        </td>
        <td><%= link_to edit_product_path(product) ,class: "btn btn-warning" , :style=>'color:#FFFFFF;' do %>
              <i class="glyphicon glyphicon-check"></i>Edit
            <%end%>
        </td>
        <td><%= link_to  product, method: :delete, data: { confirm: 'Are you sure?' } ,class: "btn btn-danger" , :style=>'color:#FFFFFF;' do %>
              <i class="glyphicon glyphicon-check"></i>Destroy
            <%end%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to  new_product_path , :style=>'color:#FFFFFF;', class: "btn btn-primary" do%>
<i class="glyphicon glyphicon-plus"></i>New Product
        <%end%>
