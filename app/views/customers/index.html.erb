

<h1>Listing Customers</h1>
<ul class="nav nav-tabs" role="tablist" >
 <li> <%= link_to 'Category', categories_path %></li>
  <li ><%= link_to 'Company', companies_path %></li>
   <li><%= link_to 'Products', products_path %></li>
    <li class="active"><%= link_to 'Customers', customers_path %></li>
   <li><%= link_to 'Orders', orders_path %></li>
</ul>
<br>
<%= link_to  new_customer_path , :style=>'color:#FFFFFF;', class: "btn btn-primary" do%>
  <i class="glyphicon glyphicon-plus"></i>New Customer
<%end%>
<br><br>
<table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>Email</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Mobile no</th>
        <th>Deliver Address</th>
     <th colspan="3"><center>Action</center></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.email %></td>
        <td><%= customer.fname %></td>
        <td><%= customer.lname %></td>
        <td><%= customer.mobile_no rescue ''%></td>
        <td><% customer.addresses.each do|address| %>
              <% if address.deliver_address == true %>
                  <strong>City: </strong><%= address.city %><br>
                  <strong>District: </strong><%= address.district %><br>
                  <strong>State: </strong><%= address.state %><br>
                  <strong>Country: </strong><%= address.country %><br>
                  <strong>Pincode: </strong><%= address.pincode %><br>
              <%end%>
            <%end%>
        </td>
        <td><%= link_to  customer , class: "btn btn-success", :style=>'color:#FFFFFF;' do%>
            <i class="glyphicon glyphicon-check"></i>Show
        <%end%>
        </td>
        <td><%= link_to  edit_customer_path(customer) , class: "btn btn-warning", :style=>'color:#FFFFFF;' do %>
              <i class="glyphicon glyphicon-pencil"></i>Edit
            <%end%>
        </td>
        <td><%= link_to customer, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger", :style=>'color:#FFFFFF;' do %>
              <i class="glyphicon glyphicon-trash"></i>Destroy
            <%end%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


